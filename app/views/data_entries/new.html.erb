<%= form_with model: @data_entry, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :message %><br>
    <%= form.text_area :message %>
  </div>

  <div>
    <%= form.submit "Save Data" %>
  </div>
<% end %>

